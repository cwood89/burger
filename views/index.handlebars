<div id="container">
  <img src="../public/assets/img/burger.jpg">
  <h1>Eat Da Burger! </h1>
</div>

<div id="devoured-list">
  <ul>
    {{#if devoured}}
    <li>
      <p>{{this.name}}</p>
    </li>
    {{/if}}
  </ul>
</div>

<div id="burgers-list">
  <ul>
    {{#unless devoured}}
    <li>
      <p>{{this.name}}</p>
      <button data-id="{{this.id}}" class="devour-burger">Devour It!</button>
    </li>
    {{/unless}}
  </ul>
</div>

<form action="/" method="POST">
  <textarea type="text" name="burger-input"></textarea>

  <button type="submit">Submit</button>
</form>


